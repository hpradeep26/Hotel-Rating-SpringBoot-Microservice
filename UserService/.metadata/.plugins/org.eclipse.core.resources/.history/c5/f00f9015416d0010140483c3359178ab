server:
  port: 8084


spring:
  application:
    name: API-Gateway
    
cloud:
  gateway:
    routes:
      - id: USER-SERVICE
        uri: http://USER-SERVICE
        predicates:
          - "Path=/api/users/**"
          
      - id: HOTEL-SERVICE
        uri: http://HOTEL-SERVICE
        predicates:
          - "Path=/api/hotels/**"
          
      - id: RATING-SERVICE
        uri: http://RATING-SERVICE
        predicates:
          - "Path=/api/ratings/**"
          
          
eureka:
  instance:
    prefer-ip-address: false
    hostname: localhost
  client:
    fetch-registry: true
    register-with-eureka: true
    serviceUrl:
      defaultZone: http://localhost:8761/eureka

     